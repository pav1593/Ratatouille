<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <img class="card-img-top" src={{images.0.location}} alt="Card image cap" />
    <h1 class="display-4">{{name}}</h1>
  </div>
</div>

<!-- container for all the recipes details-->
<div class="container justify-content-center d-flex flex-wrap mt-5">
  <div class="card">
    <div class="card-body align-item-center">
      <h5 class="card-title">Description:</h5>
      <p class="card-text">
        {{description}}
      </p>
      <h5 class="card-title">Ingredients:</h5>
      <p class="card-text">
        {{ingredients}}
      </p>
      <h5 class="card-title">Steps:</h5>
      <p class="card-text">
        {{steps}}
      </p>
      <h5 class="card-title">Created by:</h5>
      <p class="card-text">
        {{user.name}} on {{format_date date_created}}
      </p>
      {{!-- <button type="button" class="btn btn-danger float-right" id="favorite-recipe">
        <i class="fa-solid fa-heart"></i>
      </button> --}}
    </div>
    {{#each images}}
      <h5 class="p-4">Gallery:</h5>
    <div class="d-flex flex-wrap p-4">
      <img src={{location}} style="width: fit-content; height: 150px; padding:1rem ">
    </div>
    {{/each}}
    <!-- comment cards generated -->
    <div>
      <h5 class="card-title p-4">Comments: </h5>
      {{#each comments as |comment|}}
      <div class="alert alert-secondary" role="alert">
        {{comment.comment}}<br>Created On: {{format_date comment.date_created}}
      </div>
      {{/each}}
    </div>
  </div>
  {{!-- add comments after login --}}
  {{#if logged_in}}
  <div>
    <h3>Create your comment:</h3>
    <form class="comment-box comment-submit" action="POST">
      <div class="form-group">
        <label for="exampleFormControlTextarea1">On a scale of 1-5(with 1 being least favorable and 5
          being most
          favorable)</label>
        <textarea class="form-control" id="rating-comment" rows="3" placeholder="eg.1"></textarea>
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Share your comments here:</label>
        <textarea class="form-control" id="recipe-comment" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary d-block mx-auto">
        Submit
      </button>
    </form>
  </div>
</div>
</div>
{{/if}}







<script src="/js/comment.js"></script>